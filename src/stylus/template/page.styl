.page-wrapper
	height 100%
	display table
	width 100%

.app-header
.text
	max-width maxWidth
	margin 0 auto
	top 0
	width 100%

.text
	max-width 600px
	line-height 1.6
	font-weight 100
	font-size 1.8em
	display none
	
.app-header
	+above(wideStream)
		position absolute
		left 0
		top 0
		max-width 150px

/* App body */
.app-content
	display table-cell
	vertical-align middle
	width 100%
	.stream
		max-width maxWidth
		padding-bottom 50px
		margin -100px auto 20px
		
