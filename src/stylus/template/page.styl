.page-wrapper
	height 70vh
	display table
	width 100%
	+above(480px)
		height 100vh

.app-header
.text
	max-width maxWidth
	margin 0 auto
	top 0
	width 100%

.text
	max-width 600px
	line-height 1.6
	font-weight 100
	font-size 1.4em
	padding 1em 5%
	width 90%
	+above(480px)
		font-size 1.8em
		padding 1em 0
		
	
.app-header
	+above(wideStream)
		position absolute
		left 0
		top 0

/* App body */
.app-content
	display table-cell
	vertical-align middle
	width 100%
	.stream
		max-width maxWidth
		padding-bottom 50px
		margin 5% auto 20px
		
